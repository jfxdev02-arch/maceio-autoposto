@{ Layout = null; }
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pesquisa de Satisfacao - Maceio Auto Posto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --vermelho: #E31C23;
            --vermelho-escuro: #B91620;
            --amarelo: #FFD100;
            --verde: #28a745;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, var(--vermelho) 0%, var(--vermelho-escuro) 100%);
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .survey-container {
            width: 100%;
            max-width: 500px;
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .survey-header {
            background: var(--amarelo);
            padding: 25px 20px;
            text-align: center;
        }

        .survey-logo {
            width: 70px;
            height: 70px;
            background: var(--vermelho);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 4px 15px rgba(227, 28, 35, 0.4);
        }

        .survey-logo span {
            font-size: 2.5rem;
            font-weight: 900;
            color: white;
        }

        .survey-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
        }

        .survey-subtitle {
            font-size: 0.9rem;
            color: #555;
            margin: 5px 0 0;
        }

        .progress-container {
            padding: 20px 25px 0;
        }

        .progress-bar-custom {
            height: 8px;
            background: #e9ecef;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--vermelho) 0%, var(--amarelo) 100%);
            border-radius: 4px;
            transition: width 0.4s ease;
        }

        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 12px;
        }

        .step-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #e9ecef;
            transition: all 0.3s ease;
        }

        .step-dot.active {
            background: var(--vermelho);
            transform: scale(1.2);
        }

        .step-dot.completed {
            background: var(--verde);
        }

        .slides-container {
            position: relative;
            min-height: 450px;
            overflow: visible;
            padding-bottom: 30px;
        }

        .slide {
            position: relative;
            width: 100%;
            padding: 25px;
            padding-bottom: 30px;
            opacity: 0;
            display: none;
            transition: opacity 0.4s ease;
        }

        .slide.active {
            opacity: 1;
            display: block;
        }

        .slide h2 {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 20px;
            text-align: center;
        }

        .welcome-text {
            text-align: center;
            color: #555;
            line-height: 1.7;
            font-size: 1rem;
        }

        .welcome-text strong {
            color: var(--vermelho);
        }

        .prize-box {
            background: linear-gradient(135deg, #fff9e6 0%, #fff3cd 100%);
            border: 2px solid var(--amarelo);
            border-radius: 16px;
            padding: 20px;
            margin-top: 20px;
            text-align: center;
        }

        .prize-box i {
            font-size: 2.5rem;
            color: var(--amarelo);
        }

        .prize-box h3 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1a1a1a;
            margin: 10px 0 5px;
        }

        .prize-box p {
            font-size: 0.9rem;
            color: #666;
            margin: 0;
        }

        .options-grid {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .option-btn {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 16px 20px;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 14px;
            cursor: pointer;
            transition: all 0.2s ease;
            text-align: left;
        }

        .option-btn:hover {
            background: #fff3cd;
            border-color: var(--amarelo);
            transform: translateY(-2px);
        }

        .option-btn.selected {
            background: #fff3cd;
            border-color: var(--vermelho);
        }

        .option-icon {
            width: 45px;
            height: 45px;
            background: var(--vermelho);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            flex-shrink: 0;
        }

        .option-btn.selected .option-icon {
            background: var(--verde);
        }

        .option-text {
            font-size: 1rem;
            font-weight: 600;
            color: #1a1a1a;
        }

        .rating-options {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .rating-btn {
            width: 70px;
            height: 70px;
            border-radius: 14px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .rating-btn:hover {
            transform: translateY(-3px);
            border-color: var(--amarelo);
        }

        .rating-btn.selected {
            border-color: var(--vermelho);
            background: #fff3cd;
        }

        .rating-btn i {
            font-size: 1.5rem;
            color: var(--amarelo);
        }

        .rating-btn span {
            font-size: 0.75rem;
            font-weight: 600;
            color: #555;
            margin-top: 4px;
        }

        .final-slide {
            text-align: center;
        }

        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--verde) 0%, #20c997 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .success-icon i {
            font-size: 3rem;
            color: white;
        }

        .code-box {
            background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
            border-radius: 16px;
            padding: 25px;
            margin: 20px 0;
        }

        .code-label {
            font-size: 0.85rem;
            color: #999;
            margin-bottom: 8px;
        }

        .code-number {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--amarelo);
            letter-spacing: 8px;
        }

        .whatsapp-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            padding: 18px;
            background: #25D366;
            color: white;
            border: none;
            border-radius: 14px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            margin-top: 20px;
        }
        
        .whatsapp-btn:hover {
            background: #128C7E;
            transform: translateY(-2px);
            color: white;
        }
        
        .whatsapp-btn i {
            font-size: 1.4rem;
        }
        
        .start-btn {
            background: linear-gradient(135deg, var(--vermelho) 0%, var(--vermelho-escuro) 100%);
        }
        
        .start-btn:hover {
            background: linear-gradient(135deg, var(--vermelho-escuro) 0%, #8a1118 100%);
        }

        .survey-footer {
            padding: 20px;
            text-align: center;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }

        .footer-text {
            font-size: 0.8rem;
            color: #888;
        }

        .error-message {
            background: #ffe3e3;
            color: #c92a2a;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            margin: 20px;
        }

        .loading-spinner {
            display: none;
            text-align: center;
            padding: 40px;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
            color: var(--vermelho);
        }

        @@media (max-width: 480px) {
            body {
                padding: 10px;
            }

            .survey-container {
                border-radius: 20px;
            }

            .slide {
                padding: 20px;
            }

            .option-btn {
                padding: 14px 16px;
            }

            .option-icon {
                width: 40px;
                height: 40px;
            }

            .rating-btn {
                width: 60px;
                height: 60px;
            }

            .code-number {
                font-size: 2rem;
                letter-spacing: 5px;
            }
        }
    </style>
</head>
<body>
    <div class="survey-container">
        <div class="survey-header">
            <div class="survey-logo">
                <span>M</span>
            </div>
            <h1 class="survey-title">MACEIO AUTO POSTO</h1>
            <p class="survey-subtitle">Pesquisa de Satisfacao</p>
        </div>

        <div class="progress-container" id="progressContainer">
            <div class="progress-bar-custom">
                <div class="progress-fill" id="progressFill" style="width: 0%"></div>
            </div>
            <div class="step-indicator">
                <div class="step-dot active" data-step="0"></div>
                <div class="step-dot" data-step="1"></div>
                <div class="step-dot" data-step="2"></div>
                <div class="step-dot" data-step="3"></div>
                <div class="step-dot" data-step="4"></div>
                <div class="step-dot" data-step="5"></div>
            </div>
        </div>

        <div class="slides-container" id="slidesContainer">
            <!-- Slide 0: Welcome -->
            <div class="slide active" data-slide="0">
                <h2>Bem-vindo!</h2>
                <p class="welcome-text">
                    Ola! Somos o <strong>Maceio Auto Posto</strong> e queremos conhecer melhor voce.
                    <br><br>
                    Responda <strong>4 perguntas rapidas</strong> e concorra a premios exclusivos!
                </p>
                <div class="prize-box">
                    <i class="bi bi-gift-fill"></i>
                    <h3>Concorra a um Tanque Cheio!</h3>
                    <p>Participe e concorra a combustivel gratis</p>
                </div>
                <button class="whatsapp-btn start-btn" onclick="nextSlide()">
                    <i class="bi bi-arrow-right-circle-fill"></i>
                    Comecar Pesquisa
                </button>
            </div>

            <!-- Slide 1: Frequency -->
            <div class="slide" data-slide="1">
                <h2><i class="bi bi-calendar-week" style="color: var(--vermelho)"></i> Pergunta 1 de 4</h2>
                <p class="text-center text-muted mb-4">Quantas vezes por semana voce abastece?</p>
                <div class="options-grid" data-question="frequency">
                    <button class="option-btn" data-value="1 vez" onclick="selectOption(this, 'frequencyAnswer')">
                        <div class="option-icon"><i class="bi bi-1-circle-fill"></i></div>
                        <span class="option-text">1 vez por semana</span>
                    </button>
                    <button class="option-btn" data-value="2 vezes" onclick="selectOption(this, 'frequencyAnswer')">
                        <div class="option-icon"><i class="bi bi-2-circle-fill"></i></div>
                        <span class="option-text">2 vezes por semana</span>
                    </button>
                    <button class="option-btn" data-value="3 vezes ou mais" onclick="selectOption(this, 'frequencyAnswer')">
                        <div class="option-icon"><i class="bi bi-3-circle-fill"></i></div>
                        <span class="option-text">3 vezes ou mais</span>
                    </button>
                </div>
            </div>

            <!-- Slide 2: Convenience -->
            <div class="slide" data-slide="2">
                <h2><i class="bi bi-shop" style="color: var(--vermelho)"></i> Pergunta 2 de 4</h2>
                <p class="text-center text-muted mb-4">Voce utiliza nossa loja de conveniencia?</p>
                <div class="options-grid" data-question="convenience">
                    <button class="option-btn" data-value="Sim" onclick="selectOption(this, 'convenienceAnswer')">
                        <div class="option-icon" style="background: var(--verde)"><i class="bi bi-check-lg"></i></div>
                        <span class="option-text">Sim, utilizo</span>
                    </button>
                    <button class="option-btn" data-value="Nao" onclick="selectOption(this, 'convenienceAnswer')">
                        <div class="option-icon" style="background: #6c757d"><i class="bi bi-x-lg"></i></div>
                        <span class="option-text">Nao utilizo</span>
                    </button>
                </div>
            </div>

            <!-- Slide 3: Fuel -->
            <div class="slide" data-slide="3">
                <h2><i class="bi bi-fuel-pump" style="color: var(--vermelho)"></i> Pergunta 3 de 4</h2>
                <p class="text-center text-muted mb-4">Qual combustivel voce utiliza com maior frequencia?</p>
                <div class="options-grid" data-question="fuel">
                    <button class="option-btn" data-value="Gasolina comum" onclick="selectOption(this, 'fuelAnswer')">
                        <div class="option-icon" style="background: var(--vermelho)"><i class="bi bi-droplet-fill"></i></div>
                        <span class="option-text">Gasolina comum</span>
                    </button>
                    <button class="option-btn" data-value="Gasolina aditivada" onclick="selectOption(this, 'fuelAnswer')">
                        <div class="option-icon" style="background: var(--amarelo)"><i class="bi bi-droplet-fill"></i></div>
                        <span class="option-text">Gasolina aditivada</span>
                    </button>
                    <button class="option-btn" data-value="Etanol" onclick="selectOption(this, 'fuelAnswer')">
                        <div class="option-icon" style="background: var(--verde)"><i class="bi bi-droplet-fill"></i></div>
                        <span class="option-text">Etanol</span>
                    </button>
                    <button class="option-btn" data-value="Diesel" onclick="selectOption(this, 'fuelAnswer')">
                        <div class="option-icon" style="background: #007bff"><i class="bi bi-droplet-fill"></i></div>
                        <span class="option-text">Diesel</span>
                    </button>
                </div>
            </div>

            <!-- Slide 4: Rating -->
            <div class="slide" data-slide="4">
                <h2><i class="bi bi-star" style="color: var(--vermelho)"></i> Pergunta 4 de 4</h2>
                <p class="text-center text-muted mb-4">Como voce avalia o Maceio Auto Posto?</p>
                <div class="rating-options" data-question="rating">
                    <button class="rating-btn" data-value="Excelente" onclick="selectRating(this)">
                        <i class="bi bi-emoji-laughing-fill"></i>
                        <span>Excelente</span>
                    </button>
                    <button class="rating-btn" data-value="Bom" onclick="selectRating(this)">
                        <i class="bi bi-emoji-smile-fill"></i>
                        <span>Bom</span>
                    </button>
                    <button class="rating-btn" data-value="Regular" onclick="selectRating(this)">
                        <i class="bi bi-emoji-neutral-fill"></i>
                        <span>Regular</span>
                    </button>
                    <button class="rating-btn" data-value="Ruim" onclick="selectRating(this)">
                        <i class="bi bi-emoji-frown-fill"></i>
                        <span>Ruim</span>
                    </button>
                    <button class="rating-btn" data-value="Muito ruim" onclick="selectRating(this)">
                        <i class="bi bi-emoji-dizzy-fill"></i>
                        <span>Pessimo</span>
                    </button>
                </div>
            </div>

            <!-- Slide 5: Final -->
            <div class="slide" data-slide="5">
                <div class="final-slide">
                    <div class="success-icon">
                        <i class="bi bi-check-lg"></i>
                    </div>
                    <h2 style="color: var(--verde)">Pesquisa Concluida!</h2>
                    <p class="text-muted mt-2">Obrigado por participar!</p>
                    
                    <div class="code-box">
                        <div class="code-label">SEU CODIGO DO SORTEIO</div>
                        <div class="code-number" id="luckyNumber">------</div>
                    </div>

                    <p class="text-muted mb-3" style="font-size: 0.9rem">
                        Clique no botao abaixo para enviar sua participacao via WhatsApp
                    </p>

                    <a href="#" class="whatsapp-btn" id="whatsappBtn" target="_blank">
                        <i class="bi bi-whatsapp"></i>
                        Enviar via WhatsApp
                    </a>
                </div>
            </div>

            <!-- Loading -->
            <div class="loading-spinner" id="loadingSpinner">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Carregando...</span>
                </div>
                <p class="mt-3 text-muted">Processando sua participacao...</p>
            </div>
        </div>

        <div class="survey-footer" id="surveyFooter">
            <p class="footer-text">
                <i class="bi bi-shield-check"></i> Seus dados estao seguros conosco
            </p>
        </div>
    </div>

    <script>
        let currentSlide = 0;
        const totalSlides = 6;
        const answers = {
            frequencyAnswer: null,
            convenienceAnswer: null,
            fuelAnswer: null,
            ratingAnswer: null
        };

        function updateProgress() {
            const progressFill = document.getElementById('progressFill');
            const percentage = (currentSlide / (totalSlides - 1)) * 100;
            progressFill.style.width = percentage + '%';

            document.querySelectorAll('.step-dot').forEach((dot, index) => {
                dot.classList.remove('active', 'completed');
                if (index < currentSlide) {
                    dot.classList.add('completed');
                } else if (index === currentSlide) {
                    dot.classList.add('active');
                }
            });
        }

        function showSlide(index) {
            const slides = document.querySelectorAll('.slide');
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                if (i === index) {
                    slide.classList.add('active');
                }
            });
            updateProgress();
        }

        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                showSlide(currentSlide);
            }
        }

        function selectOption(button, question) {
            const container = button.parentElement;
            container.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            button.classList.add('selected');
            answers[question] = button.dataset.value;

            setTimeout(() => {
                nextSlide();
            }, 300);
        }

        function selectRating(button) {
            const container = button.parentElement;
            container.querySelectorAll('.rating-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            button.classList.add('selected');
            answers.ratingAnswer = button.dataset.value;

            setTimeout(() => {
                submitSurvey();
            }, 300);
        }

        async function submitSurvey() {
            const slidesContainer = document.getElementById('slidesContainer');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const progressContainer = document.getElementById('progressContainer');

            slidesContainer.querySelector('.slide.active').classList.remove('active');
            loadingSpinner.style.display = 'block';
            progressContainer.style.display = 'none';

            try {
                const response = await fetch('/api/survey', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(answers)
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Erro HTTP:', response.status, errorText);
                    throw new Error('Erro ao enviar pesquisa: ' + response.status);
                }

                const data = await response.json();
                console.log('Resposta recebida:', data);

                document.getElementById('luckyNumber').textContent = data.luckyNumber;
                document.getElementById('whatsappBtn').href = data.whatsappLink;

                loadingSpinner.style.display = 'none';
                currentSlide = 5;
                showSlide(currentSlide);
                progressContainer.style.display = 'block';
                progressContainer.querySelector('.progress-fill').style.width = '100%';

            } catch (error) {
                console.error('Erro completo:', error);
                loadingSpinner.innerHTML = `
                    <div style="background: #ffe3e3; color: #c92a2a; padding: 20px; border-radius: 10px; text-align: center;">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
                        <p style="margin-top: 10px;">Erro ao processar sua participacao.</p>
                        <p style="font-size: 0.85rem;">${error.message}</p>
                        <button onclick="location.reload()" style="margin-top: 15px; padding: 10px 20px; background: #c92a2a; color: white; border: none; border-radius: 8px; cursor: pointer;">
                            Tentar Novamente
                        </button>
                    </div>
                `;
            }
        }
    </script>
</body>
</html>
